{% extends 'base.html.twig' %}

{% block body %}

<main id="main" class="main">

  <div class="pagetitle">
    <h1>Ajouter Employer</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Gestion des employers</a></li>
        <li class="breadcrumb-item active">Ajout employer</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Formulaire d'ajout d'un employer</h5>

            <!-- Symfony Form Start -->
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            {% for flashError in app.flashes('error') %}
              <div class="alert alert-danger" role="alert">
                {{ flashError }}
              </div>
            {% endfor %}

            <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">Nom</label>
              <div class="col-sm-10">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">Prénom</label>
              <div class="col-sm-10">
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">CIN</label>
              <div class="col-sm-10">
                {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">Poste</label>
              <div class="col-sm-10">
                {{ form_widget(form.poste, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>


            <div class="row mb-3">
              <label for="inputDate" class="col-sm-2 col-form-label">Date d'embauche</label>
              <div class="col-sm-10">
                {{ form_widget(form.hiredate, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
              </div>
            </div>


            <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">Salaire</label>
              <div class="col-sm-10">
                {{ form_widget(form.salary, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>

            <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
              <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
     
           <div class="row mb-3">
              <label for="inputEmail" class="col-sm-2 col-form-label">Téléphone</label>
              <div class="col-sm-10">
                {{ form_widget(form.Tel, {'attr': {'class': 'form-control'}}) }}
              </div>
            </div>
            

            <div class="row mb-3">
              <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Ajouter Employer</button>
              </div>
            </div>

            <!-- Symfony Form End -->
            {{ form_end(form) }}

          </div>
        </div>

      </div>

    </div>
  </section>

</main><!-- End #main -->

{% endblock %}
