{% extends 'base.html.twig' %}
{% block body %}
	<main id="main" class="main">

		<div class="pagetitle">
			<h1>Employer</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Gestion Employer</a>
					</li>
					<li class="breadcrumb-item active">Affichage</li>
				</ol>
			</nav>
		</div>
		<!-- End Page Title -->

		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Liste des compte</h5>


							<!-- Table with stripped rows -->
							<table class="table datatable">
								<thead>
									<tr>
										<th>Image</th>
										<th>Nom et prenom</th>
										
										<th>Poste</th>
										<th>Contacts</th>
										<th>Date cr√©ation</th>
										<th>Action</th>


									</tr>
								</thead>
								<tbody>

									{% for u in utilisateurs %}
										{% if u.role  != 0 %}

											<tr>
												<td><img src="{{ asset('upload/' ~ u.image) }}" alt="Image" style="width: 60px; height: 70px"></td>
												<td>{{ u.employer.nom }} {{ u.employer.prenom }}</td>
												
												<td>{{u.employer.poste}}</td>
												<td>
													<div>
														<div class="project-title">
															<span>{{ u.employer.email }}</span>
															<br/>
															<span>{{ u.employer.Tel }}
															</span>
														</td>
														<td>
													

														{{ u.dateajout ? u.dateajout|date('Y-m-d') : '' }}
													
												</td>
														<td>
															<a href="{{ path('utilisateurDelete', {'id': u.id}) }}"><img src="/template/assets/img/supprimer.png" alt="Supprimer" style="width: 20px; height: 20px;"></a>
															<a href="{{ path('utilisateurDetails', {'id': u.id}) }}">
																<img src="/template/assets/img/trouve.png" alt="Supprimer" style="width: 20px; height: 20px;">
															</a>

														</td>

													</tr>


												{% endif %}
											{% endfor %}
										</tbody>
									</table>
									<!-- End Table with stripped rows -->
								</tbody>
							</div>
						</div>

					</div>
				</div>
			</section>

		</main>
		<!-- End #main -->
	{% endblock %}
